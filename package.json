{
  "name": "parcel-benchmark-action",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jasper De Moor <jasperdemoor@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .tmp",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node src/index",
    "action-start": "yarn clean && node src/index",
    "docker-build": "yarn clean && docker build -t parcel/benchmark .",
    "docker-start": "docker run -i -t parcel/benchmark",
    "format": "prettier --write \"./**/*.{ts,js,json,md,mdx}\"",
    "lint": "eslint \"./**/*.{ts,tsx,js,jsx}\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,mdx,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/node": "^12.7.9",
    "@types/node-fetch": "^2.5.2",
    "@types/url-join": "^4.0.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@sentry/node": "5.6.2",
    "babel-eslint": "^10.0.3",
    "chalk": "^2.4.2",
    "eslint": "^6.5.1",
    "eslint-plugin-prettier": "^3.1.1",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "url-join": "^4.0.1"
  }
}
